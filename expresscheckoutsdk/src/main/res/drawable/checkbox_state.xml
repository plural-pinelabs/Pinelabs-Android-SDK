<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked state -->
    <item android:state_checked="true" android:drawable="@drawable/ic_checkbox_selected" />
    <!-- Unchecked state -->
    <item android:state_checked="false" android:drawable="@drawable/ic_checkbox_unselected" />
    <!-- Disabled state -->
    <item android:state_enabled="false" android:drawable="@drawable/ic_checkbox_unselected" />
</selector>