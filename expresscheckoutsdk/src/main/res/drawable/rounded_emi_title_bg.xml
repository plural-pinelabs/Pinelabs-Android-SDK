<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer top border -->
    <item
        android:bottom="1dp"
        android:left="0dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">

            <solid android:color="@color/black_text_80" />
            <corners android:radius="12dp" />
        </shape>

    </item>


    <!-- Background fill -->
    <item
        android:bottom="0dp"
        android:left="2dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">

            <solid android:color="@color/dense_background" />
            <corners android:radius="12dp" />

        </shape>
    </item>
</layer-list>
