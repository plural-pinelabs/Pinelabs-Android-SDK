<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer top border -->
    <item
        android:bottom="6dp"
        android:left="2dp"
        android:right="2dp"
        android:top="0dp">
        <shape>
            <corners android:radius="6dp" />
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="3dp"
                android:color="#006400" />
        </shape>
    </item>


    <!-- Inner top border (slightly below outer) -->
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="4dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="4dp"
                android:color="@color/border_light_green_24" />
            <corners android:radius="12dp" />
        </shape>
    </item>


    <!-- Background fill -->
    <item android:top="2dp"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp">
        <shape>
            <solid android:color="#E6FFE6" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>
