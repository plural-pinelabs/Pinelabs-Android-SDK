<resources>
    <declare-styleable name="OtpInputView">
        <attr name="otpDigits" format="integer" />
        <attr name="boxSpacing" format="dimension" />

        <attr name="otpTextColor" format="color" />
        <attr name="otpTextSize" format="dimension" />
        <attr name="otpTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <attr name="otpCursorVisible" format="boolean" />

        <attr name="boxCornerRadius" format="dimension" />
        <attr name="boxStrokeColor" format="color" />
        <attr name="boxStrokeWidth" format="dimension" />

    </declare-styleable>
</resources>