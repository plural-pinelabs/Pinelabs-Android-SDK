<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/express_nav"
    app:startDestination="@id/splashFragment">


    <fragment
        android:id="@+id/splashFragment"
        android:name="com.plural_pinelabs.expresscheckoutsdk.presentation.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_phoneNumberFragment"
            app:destination="@id/phoneNumberFragment" />
        <action
            android:id="@+id/action_splashFragment_to_paymentModeFragment"
            app:destination="@id/paymentModeFragment" />
    </fragment>
    <fragment
        android:id="@+id/landingFragment"
        android:name="com.plural_pinelabs.expresscheckoutsdk.presentation.landing.LandingFragment"
        android:label="fragment_landing"
        tools:layout="@layout/fragment_landing" />
    <fragment
        android:id="@+id/phoneNumberFragment"
        android:name="com.plural_pinelabs.expresscheckoutsdk.presentation.PhoneNumberFragment"
        android:label="fragment_phone_number"
        tools:layout="@layout/fragment_phone_number" >
        <action
            android:id="@+id/action_phoneNumberFragment_to_verifyOTPFragment"
            app:destination="@id/verifyOTPFragment" />
    </fragment>
    <fragment
        android:id="@+id/verifyOTPFragment"
        android:name="com.plural_pinelabs.expresscheckoutsdk.VerifyOTPFragment"
        android:label="VerifyOTPFragment" >
        <action
            android:id="@+id/action_verifyOTPFragment_to_newAddressFormFragment"
            app:destination="@id/newAddressFormFragment" />
    </fragment>
    <fragment
        android:id="@+id/newAddressFormFragment"
        android:name="com.plural_pinelabs.expresscheckoutsdk.presentation.NewAddressFormFragment"
        android:label="NewAddressFormFragment" >
        <action
            android:id="@+id/action_newAddressFormFragment_to_paymentModeFragment"
            app:destination="@id/paymentModeFragment" />
    </fragment>
    <fragment
        android:id="@+id/paymentModeFragment"
        android:name="com.plural_pinelabs.expresscheckoutsdk.presentation.PaymentModeFragment"
        android:label="fragment_payment_mode"
        tools:layout="@layout/fragment_payment_mode" >
        <action
            android:id="@+id/action_paymentModeFragment_to_cardFragment"
            app:destination="@id/cardFragment" />
    </fragment>
    <fragment
        android:id="@+id/cardFragment"
        android:name="com.plural_pinelabs.expresscheckoutsdk.presentation.card.CardFragment"
        android:label="fragment_card"
        tools:layout="@layout/fragment_card" />
</navigation>