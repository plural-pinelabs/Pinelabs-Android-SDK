<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="16dp"
    android:orientation="vertical"
    tools:context=".presentation.emi.TenureSelectionFragment">

    <LinearLayout
        android:id="@+id/top_bar_back_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:clickable="true"
            android:importantForAccessibility="no"
            android:padding="8dp"
            android:src="@drawable/ic_back_arrow"
            app:tint="@color/black_text_80" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/go_back"
            android:textFontWeight="600"
            android:textSize="14sp" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/selected_emi_issuer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_address_background"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar_back_layout">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_field_border"
            android:importantForAccessibility="no"
            android:padding="6dp"
            android:src="@drawable/ic_generic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/issuer_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:textColor="@color/black_text_80"
            android:textFontWeight="600"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/logo"
            app:layout_constraintTop_toTopOf="@id/logo"
            tools:text="Issuer Title" />

        <TextView
            android:id="@+id/emi_per_month_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_text"
            android:textFontWeight="600"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/emi_per_month_label"
            app:layout_constraintTop_toTopOf="@id/issuer_title"
            tools:text="@string/amount_emi_per_month" />

        <TextView
            android:id="@+id/emi_per_month_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_text_80"
            android:textFontWeight="500"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/issuer_title"
            tools:text="@string/amount_emi_per_month_label" />

        <TextView
            android:id="@+id/emi_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/no_cost_emi"
            android:textColor="@color/black_text_50"
            android:textFontWeight="500"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/issuer_title"
            app:layout_constraintTop_toBottomOf="@id/issuer_title" />

        <TextView
            android:id="@+id/for_x_month_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/for_x_months"
            android:textColor="@color/black_text_50"
            android:textFontWeight="500"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emi_per_month_value" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/card_details_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@id/footer"
        app:layout_constraintTop_toBottomOf="@id/selected_emi_issuer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/card_details"
                android:textColor="@color/black_text_80"
                android:textFontWeight="500"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:minHeight="50dp"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/card_number_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_field_top_border"
                        android:fontFamily="sans-serif-medium"
                        android:hint="@string/card_number_hint"
                        android:inputType="number"
                        android:maxLength="19"
                        android:padding="15dp"
                        android:textColorHint="@color/black_text_30"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/expiry_date_et"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/input_field_bottom_left_border"
                        android:fontFamily="sans-serif-medium"
                        android:hint="@string/mm_yy"
                        android:inputType="number"
                        android:padding="15dp"
                        android:textColorHint="@color/black_text_30"
                        android:textSize="14sp"
                        tools:ignore="TextFields" />

                    <EditText
                        android:id="@+id/cvv_et"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/input_field_bottom_right_border"
                        android:fontFamily="sans-serif-medium"
                        android:hint="@string/cvv"
                        android:inputType="numberPassword"
                        android:maxLength="4"
                        android:maxLines="1"
                        android:padding="15dp"
                        android:textColorHint="@color/black_text_30"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/error_message_card_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableStart="@drawable/ic_error_icon"
                android:drawablePadding="8dp"
                android:fontFamily="sans-serif"
                android:text="@string/please_enter_a_valid_card_number"
                android:textColor="@color/error_DD4D42"
                android:textFontWeight="500"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-medium"
                android:text="Card holder's name"
                android:textColor="@color/black_text_80"
                android:textFontWeight="500"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_field_border">

                <EditText
                    android:id="@+id/full_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="@color/transparent"
                    android:fontFamily="sans-serif-medium"
                    android:hint="@string/full_name_on_card"

                    android:importantForAutofill="no"
                    android:textColorHint="@color/black_text_30"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/error_message_card_holder_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableStart="@drawable/ic_error_icon"
                android:drawablePadding="8dp"
                android:fontFamily="sans-serif"
                android:text="Please enter a valid card holder name"
                android:textColor="@color/error_DD4D42"
                android:textFontWeight="500"
                android:visibility="gone" />

            <!--            <androidx.appcompat.widget.AppCompatButton-->
            <!--                android:id="@+id/continue_btn"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="24dp"-->
            <!--                android:background="@drawable/primary_button_background"-->
            <!--                android:gravity="center"-->
            <!--                android:minHeight="48dp"-->
            <!--                android:text="@string/continue_text"-->
            <!--                android:textColor="@color/white" />-->
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/save_info_text"
            android:layout_width="match_parent"
            android:paddingStart="2dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/confetti_saving_bg"
            android:drawableStart="@drawable/ic_success_offer_saving"
            android:gravity="center"
           android:paddingVertical="8dp"
            android:text="@string/you_re_saving_x_on_this_order" />

        <LinearLayout
            android:id="@+id/paying_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="16dp">

            <TextView
                android:id="@+id/emi_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:fontWeight="500"
                android:text="@string/paying_in_emi_of_x_months"
                android:textColor="@color/black_text_50"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/emi_details_cta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:fontWeight="600"
                android:gravity="center_horizontal"
                android:text="@string/emi_details"
                android:textColor="@color/black_text_80"
                android:textSize="14sp" />


        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/continue_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/primary_button_background"
            android:gravity="center"
            android:minHeight="48dp"
            android:textAllCaps="false"
            android:text="@string/continue_text"
            android:textColor="@color/white" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>