<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/payment_mode_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <ImageView
        android:id="@+id/payment_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_cards_payment_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/chevron_arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:foregroundTint="@color/black_text"
        android:importantForAccessibility="no"
        android:padding="6dp"
        android:src="@drawable/ic_chevron_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black_text" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black_text"
        android:textFontWeight="700"
        app:layout_constraintStart_toEndOf="@id/payment_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Item name" />

    <TextView
        android:id="@+id/payment_mode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black_text"
        android:textFontWeight="700"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/chevron_arrow"
        app:layout_constraintStart_toEndOf="@id/payment_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Item name" />

    <TextView
        android:id="@+id/payment_mode_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:gravity="start"
        android:maxLines="1"
        android:textAlignment="viewStart"
        android:textColor="@color/black_text_50"
        android:textFontWeight="500"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/chevron_arrow"
        app:layout_constraintStart_toEndOf="@id/payment_icon"
        app:layout_constraintTop_toBottomOf="@id/payment_mode"
        tools:text="Item Description" />


</androidx.constraintlayout.widget.ConstraintLayout>