<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wallet_parent_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:clickable="true"
    android:orientation="horizontal"
    android:padding="4dp">

    <ImageView
        android:id="@+id/wallet_logo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/input_field_border"
        android:importantForAccessibility="no"
        android:padding="6dp"
        android:src="@drawable/ic_generic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wallet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif"
        android:textColor="@color/black_text_80"
        android:textFontWeight="600"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/wallet_logo"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Wallet Title" />

    <ImageView
        android:id="@+id/wallet_chevron"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical|end"
        android:layout_weight="1"
        android:padding="6dp"
        android:src="@drawable/ic_chevron_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black_text_50" />


</androidx.constraintlayout.widget.ConstraintLayout>