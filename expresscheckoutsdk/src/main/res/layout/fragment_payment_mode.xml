<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.landing.PaymentModeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contact_and_delivery_details_collapsed_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/rounded_address_background"
            android:orientation="horizontal"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.1"
                android:text="@string/contact_and_delivery_details"
                android:textAllCaps="true"
                android:textFontWeight="700"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/chevron"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:foregroundGravity="center_vertical"
                android:importantForAccessibility="no"
                android:padding="6dp"
                android:src="@drawable/ic_chevron_bottom"
                android:tint="@color/black_text_50"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="UseAppTint" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contact_and_delivery_details_expanded_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/rounded_address_background"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/contact_details_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.1"
                android:text="@string/contact_details"
                android:textAllCaps="true"
                android:textFontWeight="700"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/edit_contact_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:foregroundGravity="center_vertical"
                android:importantForAccessibility="no"
                android:padding="2dp"
                android:src="@drawable/ic_edit"
                android:tint="@color/black_text_50"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="UseAppTint" />

            <TextView
                android:id="@+id/contact_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:textFontWeight="500"
                android:maxLines="1"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black_text_80"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/contact_details_title" />

            <TextView
                android:textColor="@color/black_text_80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/ic_verified"
                android:fontFamily="sans-serif-medium"
                android:text="@string/verified_user"
                android:textFontWeight="600"
                android:textSize="12sp"
                android:id="@+id/verified_user_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/contact_details" />

            <View
                android:id="@+id/divider_line"
                android:background="@color/black_text_8"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/verified_user_text"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/delivery_details_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.1"
                android:text="@string/delivery_address"
                android:textAllCaps="true"
                android:layout_marginTop="24dp"
                android:textFontWeight="700"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/divider_line"
                app:layout_constraintStart_toStartOf="parent"
                />

            <ImageView
                android:id="@+id/edit_delivery_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="20dp"
                android:foregroundGravity="center_vertical"
                android:importantForAccessibility="no"
                android:padding="2dp"
                android:src="@drawable/ic_edit"
                android:tint="@color/black_text_50"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider_line"
                tools:ignore="UseAppTint" />


            <TextView
                android:id="@+id/address_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_denser_bg"
                android:fontFamily="sans-serif"
                android:paddingHorizontal="12dp"
                android:layout_marginTop="20dp"
                android:paddingVertical="6dp"
                android:textColor="@color/black_text"
                android:textFontWeight="700"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/delivery_details_title"
                tools:text="Home" />


            <TextView
                android:id="@+id/delivery_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:textFontWeight="500"
                android:textSize="14sp"
                android:maxLines="1"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black_text_80"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/address_type" />



        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginVertical="24dp"
            layout="@layout/recommended_card_item_layout" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/offers_parent_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/offers_twin_background"
            android:gravity="center_vertical"
            android:minHeight="56dp"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingTop="4dp">


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/offers_gif"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginVertical="6dp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_repeatCount="@integer/material_motion_duration_long_2" />

            <TextView
                android:id="@+id/save_upto_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="sans-serif"
                android:text="@string/save_up_to"
                android:textColor="@color/green_00722F"
                android:textFontWeight="700"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/offers_gif"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/view_offers_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginEnd="16dp"
                android:background="@drawable/background_offers"
                android:drawableEnd="@drawable/ic_chevron_white"
                android:drawablePadding="8dp"
                android:drawableTint="@color/black_text_80"
                android:fontFamily="sans-serif"
                android:foregroundGravity="center_vertical"
                android:gravity="end"
                android:padding="8dp"
                android:paddingStart="4dp"
                android:text="Offers"
                android:textColor="@color/black_text_80"
                android:textFontWeight="600"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/saved_cards_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="700"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.12"
            android:text="@string/saved_cards"
            android:textAllCaps="true"
            android:textSize="12sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/saved_cards_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/input_field_border"
            android:elevation="0dp"
            android:orientation="vertical"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/saved_cards_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_field_border" />


                <TextView
                    android:id="@+id/add_new_card_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/primary_button_disabled_bg"
                    android:fontFamily="sans-serif-medium"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:text="@string/add_new_card"
                    android:textColor="@color/black_text_80"
                    android:textFontWeight="600" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="700"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.12"
            android:text="@string/select_a_payment_option"
            android:textAllCaps="true"
            android:textSize="12sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/payment_option_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/input_field_border"
            android:elevation="8dp"
            android:minHeight="100dp"
            app:cardCornerRadius="8dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/payment_option_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="5"
                tools:listitem="@layout/payment_item_layout" />
        </androidx.cardview.widget.CardView>

        <include layout="@layout/footer" />

    </LinearLayout>
</ScrollView>