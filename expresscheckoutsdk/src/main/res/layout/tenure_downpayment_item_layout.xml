<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tenure_parent_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:background="@drawable/input_field_border"
    android:padding="4dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4sp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/best_value_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/best_value_blue_bg"
            android:fontFamily="sans-serif-medium"
            android:paddingHorizontal="6dp"
            android:paddingVertical="4dp"
            android:text="@string/best_value"
            android:textColor="@color/blue_4D85B4"
            android:textFontWeight="600"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recommended_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/recommended_tag_bg"
            android:fontFamily="sans-serif-medium"
            android:paddingHorizontal="6dp"
            android:paddingVertical="4dp"
            android:text="@string/recommended"
            android:textColor="@color/purple_6A60AF"
            android:textFontWeight="600"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/saving_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/saving_gradient"
            android:orientation="horizontal"
            android:padding="3dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_saving_offer_tag" />

            <TextView
                android:id="@+id/saving_text_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.02"
                android:text="@string/save_rs_x"
                android:textColor="@color/CC00722F_green_80"
                android:textFontWeight="600"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>


    <RadioButton
        android:id="@+id/tenure_radio_button"
        android:layout_width="32dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:gravity="center|center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tenure_amount_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black_text"
        android:textFontWeight="700"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/tenure_radio_button"
        app:layout_constraintStart_toEndOf="@id/tenure_radio_button"
        app:layout_constraintTop_toTopOf="@id/tenure_radio_button"
        tools:text="Rs.3333" />

    <TextView
        android:id="@+id/tenure_x_months_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="sans-serif"
        android:text="@string/x_3_months"
        android:textColor="@color/black_text_80"
        android:textFontWeight="600"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/tenure_radio_button"
        app:layout_constraintStart_toEndOf="@id/tenure_amount_text_view"
        app:layout_constraintTop_toTopOf="@id/tenure_radio_button" />

    <TextView
        android:id="@+id/tenure_processing_fee_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="1"
        android:paddingBottom="8dp"
        android:text="@string/x_one_time_processing_fee"
        android:textColor="@color/black_text_50"
        android:textFontWeight="500"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/tenure_emi_type_text_view"
        app:layout_constraintStart_toEndOf="@id/tenure_radio_button"
        app:layout_constraintTop_toBottomOf="@id/tenure_radio_button" />

    <TextView
        android:id="@+id/tenure_emi_type_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingBottom="8dp"
        android:textColor="@color/yellow_D6A243"
        android:textFontWeight="500"
        android:textSize="12sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tenure_radio_button"
        tools:text="EMI TYPE" />

    <TextView
        android:id="@+id/tenure_payable_amount_label_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="1"
        android:paddingTop="4dp"
        android:text="@string/total_payable"
        android:textColor="@color/black_text_60"
        android:textFontWeight="600"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@id/tenure_radio_button"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/tenure_payable_amount_value_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:textColor="@color/black_text_80"
        android:textFontWeight="700"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tenure_payable_amount_label_text_view"
        tools:ignore="SmallSp"
        tools:text="@string/rupee_symbol" />

    <TextView
        android:id="@+id/card_details_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/card_details"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-medium"
        android:textFontWeight="500"
        android:textColor="@color/black_text_80"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tenure_processing_fee_text_view" />

    <LinearLayout
        android:id="@+id/card_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:minHeight="50dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_details_label">


        <EditText
            android:id="@+id/card_number_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_field_border"
            android:fontFamily="sans-serif-medium"
            android:hint="@string/card_number_hint"
            android:inputType="number"
            android:maxLength="19"
            android:padding="15dp"
            android:textColorHint="@color/black_text_30"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>